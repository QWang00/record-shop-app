<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="album"
            type="com.northcoders.recordshop.model.Album" />

        <variable
            name="clickHandlers"
            type="com.northcoders.recordshop.ui.addAlbum.AddAlbumClickHandlers"/>
    </data>

    <LinearLayout
        android:id="@+id/addNewAlbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="14dp"
        tools:context=".ui.addAlbum.AddNewAlbumActivity">


        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/albumImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/album"
                    android:scaleType="centerCrop"
                    android:contentDescription="Album Image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Album"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />


            </LinearLayout>

        </RelativeLayout>


        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >

            <!-- Album Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Album Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_albumName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={album.name}"
                android:hint="Enter Album Name"
                />

            <!-- Artist Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/editText_albumArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={album.artist}"
                android:hint="Enter Artist Name"
                 />

            <!-- Release Year Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Year"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/editText_albumReleaseYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={album.convertIntToString(album.releaseYear)}"
                android:inputType="number"
                android:hint="Enter Release Year"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Genre Spinner -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/genreSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:padding="7dp"
                    android:entries="@array/genre_array"
                    android:onItemSelected="@{(parent, view, position, id) -> clickHandlers.onGenreSelected(position)}"
                    />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Button Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingTop="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_back"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:onClick="@{clickHandlers.onClickBackBtn}"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:onClick="@{clickHandlers.onSubmitBtnClick}"/>

        </RelativeLayout>

    </LinearLayout>
</layout>